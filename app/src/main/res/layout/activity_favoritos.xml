<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FavoritosActivity"
        android:background="@color/color_fondo">

    <View
            android:layout_width="320dp"
            android:layout_height="65dp" android:id="@+id/viewMusica"
            android:background="@drawable/back_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="464dp"
            app:layout_constraintHorizontal_bias="0.493"/>
    <EditText
            android:layout_width="214dp"
            android:layout_height="0dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editUser"
            app:layout_constraintTop_toTopOf="@+id/viewMusica" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"
            android:text="@string/estilo_musica"
            android:typeface="sans" android:textColor="@color/color_user" android:textSize="15sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125" android:layout_marginTop="12dp"/>
    <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp" app:srcCompat="@drawable/icon_nota_muscia"
            android:id="@+id/imageMusica"
            app:layout_constraintBottom_toBottomOf="@+id/viewMusica" android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@+id/viewMusica" android:layout_marginStart="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textPrecio" tools:text="@string/precio"
            android:typeface="sans" android:fontFamily="sans-serif" android:textColor="@color/color_user"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.106"
            android:textSize="17sp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.393"/>
<!--////////////////////////////////////////////////////////////////-->
    <View
            android:layout_width="320dp"
            android:layout_height="65dp" android:id="@+id/viewPrecio"
            android:background="@drawable/back_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="356dp"
            app:layout_constraintHorizontal_bias="0.493"/>

    <!--////////////////////////////////////////////////////////////////-->
    <Button
            android:text="Button"
            android:layout_width="320dp"
            android:layout_height="65dp" android:id="@+id/bBuscar"
            android:layout_marginBottom="248dp"
            android:background="@drawable/back_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.975"/>
    <SeekBar
            android:layout_width="265dp"
            android:layout_height="29dp"
            android:id="@+id/seekBar2" app:layout_constraintEnd_toEndOf="@+id/viewPrecio"
            app:layout_constraintStart_toStartOf="@+id/viewPrecio"
            app:layout_constraintTop_toTopOf="@+id/viewPrecio"
            app:layout_constraintBottom_toBottomOf="@+id/viewPrecio" app:layout_constraintVertical_bias="0.722"
            app:layout_constraintHorizontal_bias="0.507"/>


</android.support.constraint.ConstraintLayout>